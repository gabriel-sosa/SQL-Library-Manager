extends layout.pug

block content
	h1 Books
	p
		a.button(href='/books/new') Create New Book
	table
		thead
			tr
				th Title
				th Author
				th Genre
				th Year
		tbody
			each book in data
				tr
					th
						a(href=`/books/${book.id}`)= book.title
					th= book.author
					th= book.genre
					th= book.year