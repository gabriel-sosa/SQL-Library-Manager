extends layout.pug

block content
	h1 Update Book
	h1 New Book
	form
		h2.error Oooops!
		ul.error
			li Author is required
			li Name is required
		p
			label(for="title") Title
			input(name="title", type="text", id="title", value="A Brief History of Time")
		p
			label(for="author") Author
			input(name="author", type="text", id="author", value="Stephen Hawking")
		p
			label(for="genre") Genre
			input(name="genre", type="text", id="genre", value="Non-fiction")
		p
			label(for="year") Year
			input(name="year", type="text", id="year", value="1988")
		p
			input(type="submit", value="Update Book / Create new book")
	form( method="post" action="/books/8/delete" onsubmit="return confirm('Do you really want to delete this book?');")
		p
			a.button(href="/") Cancel
		p
			input(type="submit", value="Delete Book")